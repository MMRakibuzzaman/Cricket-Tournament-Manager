
@{
    ViewData["Title"] = "AssignRole";
}

<h1 class="display-4 alert alert-info">Assign Role</h1>

<div class="row">
    <div class="col">
        <h4 class="text-primary text-center">@ViewBag.msg</h4>
    </div>
</div>

<div class="row">
    <form asp-action="AssignRole" asp-controller="Role" method="post">
        <div class="col-10">
            <div class="row mb-2">
                <label class="col-form-label col-2">Assign User</label>
                <div class="col-8">
                    <select name="userData" class="form-select">
                        <option>---User---</option>
                        @foreach (var item in ViewBag.users)
                            {
                            <option value="@item.Email">@item.Email</option>
                            }
                    </select>
                </div>
            </div>
            <div class="row mb-2">
                <label class="col-form-label col-2">Assign Role</label>
                <div class="col-8">
                    <select name="roleData" class="form-select">
                        <option>---Role---</option>
                        @foreach (var item in ViewBag.roles)
                        {
                            <option value="@item.NormalizedName">@item.NormalizedName</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success col-2">Save</button>
    </form>
</div>

