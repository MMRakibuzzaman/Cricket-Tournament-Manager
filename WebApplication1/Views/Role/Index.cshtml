@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>  

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-info">Add Roles</h2>

<div class="row">
    <div class="col">
        <h4 class="text-primary text-center">@ViewBag.msg</h4>
    </div>
</div>

<div class="row">
    <form asp-action="AddRole" asp-controller="Role" method="post">
        <div class="col-10">
            <div class="row mb-2">
                <label class="col-form-label col-2">Role</label>
                <div class="col-8">
                    <input name="userRole" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-success col-2">Save</button>
            </div>
        </div>
    </form>
</div>


<hr />

<div class="row">
    <div class="col-10">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Role Name</th>
                <th>Id</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>@role.Id</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No Roles Found</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>