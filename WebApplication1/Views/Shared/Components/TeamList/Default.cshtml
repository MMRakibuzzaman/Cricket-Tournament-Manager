@model IEnumerable<WebApplication1.Models.Team>

@if (!Model.Any())
{
    <div class="alert alert-light text-center border">
        <p class="mb-0 text-muted">No teams registered yet.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var team in Model)
        {
            <div class="col-xl-4 col-md-6">
                <div class="card shadow-sm h-100 border-0">

                    <div class="card-header bg-white p-3 border-bottom-0">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    @if (!string.IsNullOrEmpty(team.LogoUrl))
                                    {
                                        <img src="@team.LogoUrl" class="rounded-circle border" width="50" height="50" style="object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center text-muted fw-bold" style="width:50px; height:50px; font-size: 1.2rem;">
                                            @team.Name.Substring(0, 1)
                                        </div>
                                    }
                                </div>

                                <div>
                                    <h5 class="fw-bold mb-0 text-dark">
                                        @team.Name
                                        @if (!team.IsActive)
                                        {
                                            <span class="badge bg-danger ms-1" style="font-size: 0.5em; vertical-align: middle;">INACTIVE</span>
                                        }
                                    </h5>
                                    <div class="small text-muted mt-1">
                                        <span class="me-2"><i class="fa-solid fa-calendar"></i> Est: @(team.EstablishedDate?.Year.ToString() ?? "-")</span>
                                        <span class="text-success"><i class="fa-solid fa-sack-dollar"></i> $@team.Revenue.ToString("N0")</span>
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-sm btn-outline-secondary border-0"
                                    onclick="openSlidePanel('@Url.Action("Edit", "Teams", new { id = team.TeamId })', 'Manage @team.Name')">
                                <i class="fa-solid fa-pencil"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body p-0 border-top">
                        <div class="bg-light px-3 py-2 small fw-bold text-secondary d-flex justify-content-between">
                            <span>ROSTER (@team.Players.Count)</span>
                            <span>ROLE</span>
                        </div>

                        <div class="overflow-auto" style="max-height: 250px;">
                            @if (team.Players.Any())
                            {
                                <table class="table table-sm table-hover mb-0">
                                    <tbody>
                                        @foreach (var player in team.Players)
                                        {
                                            <tr>
                                                <td class="ps-3 border-0">
                                                    <i class="fa-solid fa-user text-muted me-2 small"></i> @player.FullName
                                                </td>
                                                <td class="border-0 text-end pe-3">
                                                    <span class="badge bg-white text-dark border">@player.Role</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="text-center py-4 text-muted small">
                                    No players added.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}