@model IEnumerable<WebApplication1.Models.Match>

@if (!Model.Any())
{
    <div class="text-center p-4 text-muted">
        <small>No matches scheduled.</small>
    </div>
}
else
{
    <div class="list-group list-group-flush">
        @foreach (var match in Model)
        {
            <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <div>
                        <span class="badge bg-secondary">@match.Tournament?.Name</span>
                        <small class="text-muted ms-2">@match.MatchDate.ToString("MMM dd, yyyy - hh:mm tt")</small>
                    </div>
                    
                    <div class="btn-group">
                        <button class="btn btn-sm btn-link text-secondary p-0 me-2" 
                                onclick="openSlidePanel('@Url.Action("Edit", "Matches", new { id = match.MatchId })', 'Reschedule Match')">
                            <i class="fa-solid fa-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-link text-danger p-0" 
                                onclick="deleteItem('@Url.Action("Delete", "Matches", new { id = match.MatchId })')">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-bold text-primary">
                        @(match.HomeSquad?.Team?.Name ?? "TBD")
                    </div>
                    <div class="px-2 text-muted fw-bold">VS</div>
                    <div class="fw-bold text-danger">
                        @(match.AwaySquad?.Team?.Name ?? "TBD")
                    </div>
                </div>

                <div class="mt-1">
                    <small class="text-muted"><i class="fa fa-map-marker"></i> @(match.Venue?.Name ?? "Unknown Venue")</small>
                </div>
            </div>
        }
    </div>
}