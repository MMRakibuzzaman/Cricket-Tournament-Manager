@model WebApplication1.Models.ViewModels.TournamentVM

<form asp-action="Create" method="post">
    <div class="modal-body">
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" placeholder="Tournament Name" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="StartDate" class="form-control" placeholder="Start Date" />
                    <label asp-for="StartDate"></label>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="EndDate" class="form-control" placeholder="End Date" />
                    <label asp-for="EndDate"></label>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">Cancel</button>
        <button type="submit" class="btn btn-primary px-4">Create Tournament</button>
    </div>
</form>