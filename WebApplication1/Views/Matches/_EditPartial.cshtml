@model WebApplication1.Models.ViewModels.MatchCreateVM

<form asp-action="Edit" asp-route-id="@ViewData["MatchId"]" method="post">
    
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <select asp-for="TournamentId" asp-items="Model.Tournaments" class="form-select"></select>
                    <label asp-for="TournamentId"></label>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <select asp-for="VenueId" asp-items="Model.Venues" class="form-select"></select>
                    <label asp-for="VenueId"></label>
                </div>
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="MatchDate" class="form-control" />
            <label asp-for="MatchDate"></label>
        </div>

        <div class="row">
            <div class="col-md-5 mb-3">
                <div class="form-floating">
                    <select asp-for="HomeSquadId" asp-items="Model.Squads" class="form-select"></select>
                    <label>Home Team</label>
                </div>
            </div>
            
            <div class="col-md-2 d-flex align-items-center justify-content-center mb-3">
                <span class="fw-bold text-muted">VS</span>
            </div>

            <div class="col-md-5 mb-3">
                <div class="form-floating">
                    <select asp-for="AwaySquadId" asp-items="Model.Squads" class="form-select"></select>
                    <label>Away Team</label>
                </div>
            </div>
        </div>
        
        <div asp-validation-summary="All" class="text-danger small"></div>
    </div>

    <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">Cancel</button>
        <button type="submit" class="btn btn-warning px-4">Update Match</button>
    </div>
</form>